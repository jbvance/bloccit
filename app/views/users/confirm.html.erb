<h1> Sign Up Confirmation</h1>
<h2> Are you sure these values are correct?</h3>
<div class="row">
  <h3>Email: <%= @user.email %></h3>
  <h3>Name: <%= @user.name %></h3>
</div>
<div class="row">
    <div class="col-md-1">
      <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
    </div>
    <div class="col-md-1" style="width: auto;">
      <%= link_to "No",  new_user_path, class: 'btn btn-default'%>
  </div>
</div>
